m = peripheral.wrap("top")
m.setTextScale(1.5)
m.clear()
m.setCursorPos(2,1)
m.write("Loops")
m.setCursorPos(2,3)
m.write("A loop lets you do something")
m.setCursorPos(2,4)
m.write("over and over again.")
m.setCursorPos(2,6)
m.write("Using the code to the right,")
m.setCursorPos(2,7)
m.write("See if you can make the turtle")
m.setCursorPos(2,8)
m.write("walk around the blue block")
m.setCursorPos(2,9)
m.write("in a loop.")

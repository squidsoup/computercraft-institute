m = peripheral.wrap("right")

m.clear()
m.setTextScale(1)
m.setCursorPos(1,1)
m.write("Step 1: Place your computer on the green square")
m.setCursorPos(1,2)
m.write("Step 2: Get a record from the chest")
m.setCursorPos(1,3)
m.write("Step 3: Put the record in the disk drive")
m.setCursorPos(1,4)
m.write("Step 4: Right click your computer")
m.setCursorPos(1,5)
m.write("Step 5: Run the 'dj' program")

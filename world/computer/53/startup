m = peripheral.wrap("right")
m.setCursorPos(1,1)
m.write("Step 1. Edit a new program called 'hello'")
m.setCursorPos(1,2)
m.write("Step 2. Using the print() function make a program that prints 'hello!'")
m.setCursorPos(1,3)
m.write("Step 3. Press Ctrl to save your program")
m.setCursorPos(1,4)
m.write("Step 4. Run your program (type hello)")
m.setCursorPos(1,5)
m.write("Did your program work?")
